                                       <GridPane.margin>
                                          <Insets left="200.0" />
                                       </GridPane.margin>
                                    </Text>
                                    <JFXToggleButton fx:id="wongToggle" styleClass="jfx-button-login" stylesheets="@../css/background.css" text="Wong Finding" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="TOP" />
                                 </children>
                              </GridPane>
                           </content>
                        </Tab>
                     </tabs>
                  </JFXTabPane>
               </children>
            </GridPane>
         </center>
      </BorderPane>
